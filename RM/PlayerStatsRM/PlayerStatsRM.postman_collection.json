  },
  "item": [
    {
      "name": "Get Top Scorers",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/players/topscorers?page=1&size=5",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "players",
            "topscorers"
          ],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "size",
              "value": "5"
            }
          ]
        },
        "description": "Obtiene lista paginated de los m√°ximos goleadores ordenados descendentemente"
      },
      "response": []
    },
    {
