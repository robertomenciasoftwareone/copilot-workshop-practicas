        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Cristiano Ronaldo\",\n  \"goals\": 20\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/players",
          "host": [
            "{{baseUrl}}"
          ],
